<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@color/white"
    tools:context=".HomeActivity">

    <EditText
        android:id="@+id/ed_des_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3EDED"
        android:hint="Enter des"
        android:inputType="textPersonName|textCapSentences"
        android:padding="10dp"
        android:textColor="@color/black" />
    <Spinner
        android:id="@+id/spinner1"
        android:layout_below="@id/ed_des_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="#DCEAF1"

        />

<!--    <EditText-->
<!--        android:id="@+id/ed_hast_task"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/ed_des_video"-->
<!--        android:background="#DCEAF1"-->
<!--        android:hint="Enter hast task"-->
<!--        android:inputType="textPersonName|textCapSentences"-->
<!--        android:padding="10dp"-->
<!--        android:textColor="@color/black" />-->

    <VideoView
        android:id="@+id/video_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/bt_uploadvideo"
        android:layout_below="@id/spinner1"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/bt_uploadvideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pickVideoFab"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/teal_200"
        android:text="UpLoad video"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/bt_uploadvideoEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/pickVideoFab"
        android:layout_marginTop="5dp"
        android:backgroundTint="@color/teal_200"
        android:text="UpLoad video Edit"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/pickVideoFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_video_library_24"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/teal_200"
       />






</RelativeLayout>